#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<EndScreen>:
    replay_button: replay_button


    # Label:
    #     id: annouce
    #     text: str(root.winner_annouce)
    #     top: root.top - 50
    #     center_x: root.width / 2

    Button:
        id: replay_button
        text: "Replay"
        size: 100, 40
        on_press: root.replay_on_press


<PongGame>:
    ball: pong_ball
    player_red: player_red
    player_blue: player_blue
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player_red.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player_blue.score)
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_red
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_blue
        x: root.width - self.width
        center_y: root.center_y